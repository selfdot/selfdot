= render partial: "shared/header", event: @event

.mid_block
  .container
    .row
      .col-md-12
        %h4 Log in
        %p Please log in or sign up to create or edit submissions.
        = form_for(resource, as: resource_name, url: speaker_session_path, html: {class: 'form-horizontal'}) do |f|

          .form-group
            = f.label :email, class: 'col-md-2 control-label'
            .col-md-10
              = f.email_field :email, autofocus: true, class: 'form-control'

          .form-group
            = f.label :password, class: 'col-md-2 control-label'
            .col-md-10
              = f.password_field :password, autocomplete: "off", class: 'form-control'

          .form-group
            .col-md-offset-2.col-md-10
              - if devise_mapping.rememberable?
                = f.check_box :remember_me
                = f.label :remember_me, class: 'control-label'

          .form-group
            .col-md-offset-2.col-md-10
              = f.submit "Log in", class: "btn button orange-button"
              = link_to "Cancel", :back, class: "btn button orange-button"

              = render "devise/shared/links"
