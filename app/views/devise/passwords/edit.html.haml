= render partial: "shared/header", event: @event

.mid_block
  .container
    .row
      .col-md-12
        %h4 Change your password

        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token

          .form-group
            = f.label :password, class: 'col-md-2 control-label' do
              New password
              - if @minimum_password_length
                %em= "(#{@minimum_password_length} characters minimum)"
            .col-md-10
              = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'

          .form-group
            = f.label :password_confirmation, "Confirm new password", class: 'col-md-2 control-label'
            .col-md-10
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

          .form-group
            .col-md-offset-2.col-md-10
              = f.submit "Change my password", class: 'btn button orange-button'

              = render "devise/shared/links"
