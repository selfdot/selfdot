- if speaker_signed_in?
  %ul.navbar-nav.nav.navbar-link.navbar-right
    %li.dropdown
      %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
        = "Hello, #{current_speaker.name}"
        %span.caret
      %ul.dropdown-menu{:role => "menu"}
        %li= link_to "your submissions and talks", accounts_sessions_path
        %li= link_to "vote on submissions", selection_sessions_path if current_speaker.selector?
        %li.divider{role: "separator"}
        %li= link_to "edit your profile", edit_speaker_registration_path
        %li= link_to "logout", destroy_speaker_session_path, method: :delete
- else
  %ul.navbar-nav.nav.navbar-link.navbar-right
    %li
      = link_to "Login", new_speaker_session_path
