    .top_block
      .container
        .row
          .col-md-12
            %h1
              %span{style: "font-weight: 900;"}> self.
              org
              %ul.tag-line.lead{style: "line-height: 200%;"}
                %li conference •
                %li training •
                %li coworking

    = render partial: "shared/color_line"

    = render partial: "shared/flashes"
    = yield

    .container
      .row
        .col-md-12
          %a{:href => "http://twitter.com/selfdotorg"}
