    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "self.", :property => "og:title"}/
    %meta{:content => "https://selfdot.org", :property => "og:url"}/
    %meta{:content => image_url("self.avatar.png"), :property => "og:image"}/
    %meta{:content => "self.", :property => "og:site_name"}/
    %meta{:content => "Tech literacy for everyone", :property => "og:description"}/
    %meta{:content => "Tech literacy for everyone", :name => "description"}/
